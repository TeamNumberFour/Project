@using Microsoft.AspNetCore.Identity
@using WebApplication2.Models
@inject SignInManager<ApplicationUser> SignInManager
   
@inject UserManager<ApplicationUser> UserManager
        
@model IEnumerable<WebApplication2.Models.University>
            @{
                ViewData["Title"] = "Choose";
            }


        <div class="wrapper">
            <div class="menu">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                    <ul class="menu__list">
                        <li class="menu__login">@UserManager.GetUserName(User)</li>
                        <li class="menu__exit">
                            <button type="submit" class="menu__exit-link">
                                Log out
                            </button>
                        </li>
                    </ul>
                </form>
            </div>
            <form class="form" action="">
                <div class="choice">
                    <input autofocus="autofocus" list="univer-list" class="choice__univer" type="text" placeholder="University">
                    <datalist id="univer-list">
                       @foreach (var item in Model)
                        {<option>@Html.DisplayFor(modelItem => item.Title)</option>}
                    </datalist>
                    <input class="choice__faculty" list="faculty-list" type="text" placeholder="Faculty">
                    <datalist id="faculty-list">
   
    <option>Институт военного образования</option>
    <option>Исторический факультет</option>
    <option>Радиофизический факультет</option>
    <option>Факультет журналистики</option>
    <option>Факультет информатики</option>
    <option>Факультет психологии</option>
    <option>Химический факультет</option>
    <option>Юридический институт</option>
                    </datalist>
                </div>
                
                <a href="../3/index4.html" class="form__search">Find</a>
            </form>
        </div>
