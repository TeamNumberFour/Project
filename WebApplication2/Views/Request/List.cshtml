                            </div>
                            <div class="to">
                                <label for="to">@ViewBag.To : </label>
                                <input asp-for="data2" type="date" id="to" name="Data2">
                            </div>
                        </div>
                    </div>
                    <div class="filters__button">
                        <input type="reset" class="fil-b reset">
                        <button type="submit" class="fil-b submit">@ViewBag.Accept</button>
                    </div>
