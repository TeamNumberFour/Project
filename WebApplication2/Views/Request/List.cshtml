                            </div>
                            <div class="emotions__checkbox">
                                <input asp-for="uncertain" type="checkbox" id="uncertain" name="Uncertain">
                                <label for="uncertain">@ViewBag.Undefined (<>)</label>
                            </div>
                        </div>
                    </div>
